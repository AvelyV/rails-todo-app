<p id="notice"><%= notice %></p>

<!-- <h1>Tasks</h1> -->

<table class="table table-striped">
  <thead>
    <tr>
      <th>Task</th>
      <!-- <th>Comment</th> -->
      <th>Due</th>
      <th>Category</th>
      <th>Done</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <% if task.user == current_user %>
      <tr>
        <td><%= task.name %></td>
        <!-- <td><%= task.comment %></td> -->
        <td><%= task.due.to_formatted_s(:rfc822)%></td>
        <td><%= task.categories.name %></td>
        <td><%= task.done %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to 'View', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path,  class:"btn btn-light"%>
